#include<bits/stdc++.h>
using namespace std;
class CalculateAreaofrectangle
{
    public:
        double length;
        double width;
        void get_value( double x,double y)
        {


            x=length;
            y=width;


        }

        void Showarea(double y,double z)
        {
            //get_value(y,z);
            y=length;
            z=width;
            double area=y*z;
            cout<<"The area is:"<<fixed<<setprecision(2)<<area;

        }



};

int main()
{
    CalculateAreaofrectangle rectangle;
    
    cin>>rectangle.length>>rectangle.width;
    rectangle.get_value(rectangle.length,rectangle.width);
    rectangle.Showarea(rectangle.length,rectangle.width);



}
